<section class="users-new">
  <header class="page-header">
    <h1>Sign-up!</h1>
  </header>
  <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group">
      <span>Name</span>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"  %>
    </div>
    <div class="form-group">
      <span>Email</span>
      <%= f.text_field :email, class: "form-control", placeholder: "Enter Email"  %>
    </div>
    <div class="form-group">
      <span>Password</span>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter Email"  %>
    </div>
    <div class="form-group">
      <span>Password &raquo; Confirmation</span>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter Email"  %>
    </div>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
</section>
